<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Food Analytics</title>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <h1>ðŸ“Š Food Analytics</h1>
    <table id="foodTable">
      <tr>
        <th>Unique ID</th>
        <th>Food Name</th>
        <th>Timestamp</th>
        <th>Gas Level</th>
        <th>Status</th>
      </tr>
    </table>

    <script>
      const socket = io();
      socket.on("foodDataUpdate", (data) => {
        const row = `<tr><td>${data["unique id"]}</td><td>${data["food name"]}</td><td>${data.timestamp}</td><td>${data["gas level"]}</td><td>${data.status}</td></tr>`;
        document.getElementById("foodTable").innerHTML += row;
      });
    </script>
  </body>
</html>
